FROM golang:1.12-alpine

RUN apk update && apk add --no-cache git gcc musl-dev git fuse jq curl bash

# Build static gen3-fuse binary
RUN mkdir -p $GOPATH/src/github.com/uc-cdis/gen3-fuse
WORKDIR $GOPATH/src/github.com/uc-cdis/gen3-fuse
COPY . .
RUN go build -ldflags "-linkmode external -extldflags -static"

RUN mv $GOPATH/src/github.com/uc-cdis/gen3-fuse/gen3-fuse /usr/local/bin/gen3-fuse

RUN mv $GOPATH/src/github.com/uc-cdis/gen3-fuse/sidecarDockerrun.sh \
    $GOPATH/src/github.com/uc-cdis/gen3-fuse/marinerRun.sh \
    $GOPATH/src/github.com/uc-cdis/gen3-fuse/config.yaml \
    /

ENV HOME=/
CMD [ "/bin/bash", "/sidecarDockerrun.sh"]
